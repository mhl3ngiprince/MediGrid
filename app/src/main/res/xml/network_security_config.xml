<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Firebase domains -->
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firebaseio.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">google.com</domain>

        <!-- Healthcare organization domains (secure HTTPS only) -->
        <domain includeSubdomains="true">health.gov.za</domain>
        <domain includeSubdomains="true">netcare.co.za</domain>
        <domain includeSubdomains="true">mediclinic.co.za</domain>

        <!-- Trust user added CAs for healthcare networks -->
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>

    <!-- Default configuration for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>